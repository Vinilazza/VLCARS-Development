<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home page</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css
  ">
  <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
    crossorigin="anonymous">
    </script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
  <link rel="stylesheet" href="/css/index.css">

</head>
<script>
  $(function () {
    $("#header").load("/header");
    $("#footer").load("footer.html");
  });

 
</script>

<body>
  <nav>
    <div class="menu-icon">
      <span class="fas fa-bars"></span>
    </div>

    <a href="/" class="a-nav">
      <div class="logo" class="me-4">
        VL<span style="color: coral;">CARS</span>
      </div>
    </a>
    <div class="nav-items">
      <li><a href="#">Inicio</a></li>
      <li><a href="#">Sobre</a></li>
      <li><a href="#">Carros</a></li>
      <li><a href="#">Contato</a></li>
      <li><a href="#">Feedback</a></li>
    </div>
    <div class="search-icon">
      <span class="fas fa-search"></span>
    </div>
    <div class="cancel-icon">
      <span class="fas fa-times"></span>
    </div>
    <form action="#" class="me-3">
      <input type="search" class="search-data" placeholder="Search" required>
      <button type="submit" class="fas fa-search"></button>
    </form>
    <%if (status=="loggedIn" ) {%>
      <div class="dropdowne">
        <img  src="https://mdbootstrap.com/img/Photos/Avatars/img (31).jpg" class="rounded-circle dropbtn" onclick="dropdownFunc()" height="29px" alt=""
          loading="lazy" />
        <div id="myDropdowne" class="dropdowne-content">
          <a href="/profile">Profile</a>
          <a href="/logout">Logout</a>
        </div>
      </div>






      <a href="" id="navbar">
        
      </a>
      <%} else {%>
      <a href="/register" id="navbar">
        <span>Crie sua conta</span>
      </a>
      <%}%>
  </nav>

  <div class="container my-5">
    <div class="card" style="width: 100%;">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <%if (status=="loggedIn" ){%>
          <h5 class="card-title">Welcome <%= user.email %>
          </h5>
          <%}else{%>
            <h5 class="card-title">Welcome to the site</h5>
            <%}%>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>
              <%if (status=="loggedIn" ){%>
                <button class="btn btn-primary"><a href="/profile"
                    style="color: white;text-decoration: none;">Profile</a></button>
                <button class="btn btn-primary"><a href="/logout"
                    style="color: white;text-decoration: none;">Logout</a></button>
                <%}else{%>

                  <button class="btn btn-primary"><a href="/login"
                      style="color: white;text-decoration: none;">Login</a></button>
                  <button class="btn btn-primary"><a href="/register"
                      style="color: white;text-decoration: none;">Register</a></button>
                  <%}%>
      </div>
    </div>
  </div>
  <script>
     /* When the user clicks on the button,
toggle between hiding and showing the dropdown content */
function dropdownFunc() {
  document.getElementById("myDropdowne").classList.toggle("show");
}

// Close the dropdown menu if the user clicks outside of it
window.onclick = function(event) {
  if (!event.target.matches('.dropbtn')) {
    var dropdowns = document.getElementsByClassName("dropdowne-content");
    var i;
    for (i = 0; i < dropdowns.length; i++) {
      var openDropdown = dropdowns[i];
      if (openDropdown.classList.contains('show')) {
        openDropdown.classList.remove('show');
      }
    }
  }
}
  </script>
</body>

</html>